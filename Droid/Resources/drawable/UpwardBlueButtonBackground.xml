<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:drawable="@color/Upward_darkBlue" />

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/Upward_darkBlue_30" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- default state-->
    <item>
        <shape>
            <solid android:color="@color/Upward_darkBlue" />
        </shape>
    </item>
</selector>